# Template file for 'knighttime'
pkgname=knighttime
version=6.90
revision=2
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 qt6-declarative-host-tools "
makedepends="qt6-base-private-devel qt6-position-devel
 kf6-kconfig-devel kf6-kcoreaddons-devel kf6-kholidays-devel
 kf6-ki18n-devel kf6-kdbusaddons-devel gettext-devel AppStream-qt-devel"
short_desc="KNightTime provides helpers for scheduling the dark-light cycle"
maintainer="1is7ac3 <isaac.qa13@gmail.com>"
license="GPL-2.0-or-later"
homepage="https://invent.kde.org/plasma/knighttime"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=30754920cc8e03912d0b30c96728c7f0dc8119a66675cb016027d11bd4baa856

knighttime-devel_package() {
        depends="$makedepends ${sourcepkg}>=${version}_${revision}"
        short_desc+=" - development files"
        pkg_install() {
                vmove usr/include
                vmove usr/lib/cmake
                vmove "usr/lib/*.so"
        }
}
