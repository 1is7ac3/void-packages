# Template file for 'kde-gtk-config'
pkgname=kde-gtk-config
version=6.90
revision=1
build_style=cmake
configure_args="-DBUILD_TESTING=OFF
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules pkg-config qt6-tools
 sassc gettext kf6-kcoreaddons kf6-kconfig qt6-base"
makedepends="kf6-kcmutils-devel kf6-knewstuff-devel gtk+3-devel
 kf6-kdbusaddons-devel kf6-kdecoration-devel gsettings-desktop-schemas-devel"
depends="kde-cli-tools gsettings-desktop-schemas"
short_desc="GTK+3 Configurator for KDE"
maintainer="Luciogi <githubvoidlinux.supremacy429@passinbox.com>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://invent.kde.org/plasma/kde-gtk-config"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=02e76a0ce5e674e8991509160ea750947b6c511db550498a79d0b9356e2eb563

kde-gtk-config5_package() {
	short_desc+=" - (Dummy transitional package)"
	metapackage=yes
	depends="kde-gtk-config-${version}_${revision}"
}
