# Template file for 'kf6-kitemmodels'
pkgname=kf6-kitemmodels
version=6.90
revision=1
build_style=cmake
configure_args="-DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 qt6-declarative-host-tools"
makedepends="qt6-declarative-private-devel qt6-base-private-devel"
short_desc="Set of item models extending the Qt model-view framework"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kitemmodels"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=28258f46e6ce9c5ca9dc5e7f7da35d26d0a72c78311b0238cd2aeb4892f10853

kf6-kitemmodels-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
