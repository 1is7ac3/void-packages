# Template file for 'kf6-syndication'
pkgname=kf6-syndication
version=6.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base"
makedepends="kf6-kcodecs-devel"
short_desc="RSS/Atom parser library"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/syndication"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=7eb16d0837e3dab14e4f4be77f194642c2c123c73345f4693167dc59e820c007

kf6-syndication-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
