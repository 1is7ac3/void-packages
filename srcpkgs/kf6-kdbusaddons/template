# Template file for 'kf6-kdbusaddons'
pkgname=kf6-kdbusaddons
version=6.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base "
makedepends="qt6-base-private-devel"
checkdepends="dbus"
short_desc="KDE Convenience classes for DBus"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kdbusaddons"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=36efcd139267b9be40675a8f2addef9f4f24b62831ceaf2b1313a4989374a174
make_check_pre="dbus-run-session"

kf6-kdbusaddons-devel_package() {
	depends="${makedepends//private-} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
