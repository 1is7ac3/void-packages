# Template file for 'kf6-sonnet'
pkgname=kf6-sonnet
version=6.90
revision=1
build_style=cmake
configure_args="-DBUILD_DESIGNERPLUGIN=ON
 -DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 qt6-declarative-host-tools"
makedepends="qt6-declarative-private-devel aspell-devel hunspell-devel
 qt6-tools-devel qt6-base-private-devel"
short_desc="Spelling framework for Qt"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/sonnet"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=ab482a6024db7f50de8ba626232e7b09b47365294664b7fb6b0730e2c1d39cce

kf6-sonnet-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
		vmove usr/lib/qt6/plugins/designer
	}
}
