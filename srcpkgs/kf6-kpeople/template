do_check() {
	cd build
	# disable failing test
	ctest -E "personsmodeltest"
}

kf6-kpeople-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
