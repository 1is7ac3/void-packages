do_check() {
	cd build
	# Skip failing tests
	ctest -E "usermetadatawritertest"
}

kf6-kfilemetadata-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
