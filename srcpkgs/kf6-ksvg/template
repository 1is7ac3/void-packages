# Template file for 'kf6-ksvg'
pkgname=kf6-ksvg
version=6.90
revision=1
build_style=cmake
configure_args="-DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 qt6-declarative-host-tools kf6-kconfig"
makedepends="qt6-declarative-devel qt6-svg-devel kf6-karchive-devel
 kf6-kconfig-devel kf6-kcolorscheme-devel kf6-kcoreaddons-devel
 kf6-kirigami-devel"
short_desc="Components for handling SVGs"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/ksvg"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=2d80391c09e4b20de619e1159be01585da107cfbf8b4a22e3ded47241f58fc10

kf6-ksvg-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
