# Template file for 'kf6-threadweaver'
pkgname=kf6-threadweaver
version=6.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base "
makedepends="qt6-base-devel"
short_desc="KDE Helper for multithreaded programming"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/threadweaver"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=842ceb2e89f4f756254c7e9586615a6fa0ffab31f7fd08ef91389d40d2f48358

kf6-threadweaver-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
