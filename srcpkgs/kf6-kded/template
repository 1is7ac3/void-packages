# Template file for 'kf6-kded'
pkgname=kf6-kded
version=6.90
revision=1
build_style=cmake
configure_args="-DKF6_HOST_TOOLING=/usr/lib/cmake"
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 kf6-kdoctools kf6-kconfig"
makedepends="kf6-kconfig-devel kf6-kcoreaddons-devel kf6-kcrash-devel
 kf6-kdbusaddons-devel kf6-kservice-devel"
short_desc="KDE Daemon"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kded"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=340099998c73a22032c2df2bb9f8eac187fb9bec9c4a7f39bcb2bf4f1c4e4a90

kf6-kded-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/lib/cmake
	}
}
