# Template file for 'kf6-kdnssd'
pkgname=kf6-kdnssd
version=6.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base "
makedepends="qt6-base-devel"
short_desc="Network service discovery using Zeroconf"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kdnssd"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=52f4b0c75ef4f205c757e567a1b2d5af35e78e58d858a04c065244ac05b7f7cb

kf6-kdnssd-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
