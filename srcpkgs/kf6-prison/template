# Template file for 'kf6-prison'
pkgname=kf6-prison
version=6.90
revision=1
build_style=cmake
configure_args="-DKDE_INSTALL_QMLDIR=lib/qt6/qml"
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 qt6-declarative-host-tools"
makedepends="qt6-declarative-private-devel qt6-multimedia-devel zxing-cpp-devel
 libdmtx-devel qrencode-devel qt6-base-private-devel"
short_desc="Barcode API to produce QRCode barcodes and DataMatrix barcodes"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/prison"
distfiles="${homepage}/-/archive/master/${pkgname}-master.tar.gz"
checksum=d623097a2ccc51faea1976352cf92a13cb3c3b4b6f6f4f250a8b78f0d47185ae

kf6-prison-devel_package() {
	depends="$makedepends ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
